<div id="kawaii_content">
  <h1>Login</h1>
  
  <p>Type the password you put into the <code>config/kawaii.yml</code> file.</p>

  <%- form_tag(:action => "index") do -%>
    <div class='form_field'>
      <%= password_field 'kawaii', 'password' %>
    </div>
    <%= submit_tag "Log in to Kawaii" %>
  <%- end -%>
</div>